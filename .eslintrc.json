{
  "env": {
    "browser": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "rules": {
    "no-console": "warn",
    "no-unused-vars": "error",
    "no-undef": "error",
    "no-redeclare": "error",
    "eqeqeq": ["error", "always"],
    "prefer-const": "error",
    "no-var": "error",
    "semi": ["error", "always"],
    "indent": ["error", 4],
    "quotes": ["error", "single"],
    "comma-dangle": ["error", "never"],
    "no-trailing-spaces": "error",
    "keyword-spacing": "error"
  }
}
